<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddAsset">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Category"
            android:ems="10"
            android:id="@+id/editText_Category" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Item" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Item"
            android:ems="10"
            android:id="@+id/editText_Item"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Serial #"
            android:ems="10"
            android:id="@+id/editText_Serial" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Category" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="User"
            android:ems="10"
            android:id="@+id/editText_User" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Serial" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Location"
            android:ems="10"
            android:id="@+id/editText_Location" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_User" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Location" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp"/>
</android.support.constraint.ConstraintLayout>