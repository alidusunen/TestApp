<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddUser">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_UserName" android:layout_marginStart="42dp"
            app:layout_constraintStart_toEndOf="@+id/textView9" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="63dp" android:hint="Enter Name"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="57dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_UserPos"
            android:hint="Enter position" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_UserName"/>
    <TextView
            android:text="Position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="57dp"/>
</android.support.constraint.ConstraintLayout>